% headings (if no other option seems right...)
\newif\ifnostyle
\newif\ifnopar
\newif\ifnoskip
\pgfkeys{/heading/.cd,
    nostyle/.is if=nostyle,
    nopar/.is if=nopar,
    noskip/.is if=noskip}
\newcommand{\heading}[2][]{
    \pgfkeys{
        /heading/.cd,
        nostyle=false,
        nopar=false,
        noskip=false,
        #1
    }
    \par\noindent{\ifnostyle\else \bfseries \fi #2 \ifnopar \else \par \fi \ifnoskip \else \hspace{1em}\fi}
}


